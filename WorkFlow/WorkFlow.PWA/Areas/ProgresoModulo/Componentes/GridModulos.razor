@using WorkFlow.PWA.Areas.PlanesModulo.Components
@inherits EngramaComponent


<MudGrid>

	<MudItem sm="12">

		<MudGrid>
			@foreach (var modulo in Data.PlanTrabajoSelected.LstModulos)
			{
				<MudItem sm="3">
					<CardModulo ModuloSelected="modulo"
								OnModuloSelected="OnModuloSelected"
								MostrarSeleccionar="true">
					</CardModulo>
				</MudItem>
			}
		</MudGrid>

	</MudItem>

	@if (Data.ModuloSelected.iIdModulo > 0)
	{

		<MudItem sm="8">


		</MudItem>

		<MudItem sm="4">
			<MudGrid>
				@foreach (var funcionalidad in Data.ModuloSelected.LstFuncionalidades)
				{
					<MudItem sm="12">
						<CardFuncionalidad Funcionalidad="funcionalidad" 
							MostrarSeleccionar ="true"
										   OnFuncionalidadSelected="OnFuncionalidadSelected">
						</CardFuncionalidad>
					</MudItem>
				}
			</MudGrid>

		</MudItem>
	}
</MudGrid>
