@inherits EngramaPage

@page "/PagePlanes"
@using WorkFlow.PWA.Areas.PlanesModulo.Components

<MudCard>
	<MudCardHeader>
		<CardHeaderContent>
			<MudText Typo="Typo.h6">Planes</MudText>
		</CardHeaderContent>
		<CardHeaderActions>
			@if (MostrarNuevoPlan.False())
			{
				<MudFab StartIcon="@Icons.Material.Filled.Add"
						Label="Nuevo Plan"
						OnClick="MostrarCrearPlan"
						Color="Color.Primary" />
			}
			else
			{

				<MudFab StartIcon="@Icons.Material.Filled.List"
						Color="Color.Secondary"
						OnClick="EscondeCrearPlan"
						Label="Volver Lista" />
			}

		</CardHeaderActions>

	</MudCardHeader>
	<MudCardContent>
		<MudGrid>
			@if (MostrarNuevoPlan)
			{
				<MudItem sm="12">
					<GridNuevoPlan Data="Data"></GridNuevoPlan>
				</MudItem>


			}
	@* 		else
			{
				<MudItem sm="12">
					<GridEditarPlanes Data="Data"></GridEditarPlanes>
				</MudItem>
			} *@

		</MudGrid>

	</MudCardContent>
</MudCard>

