@inherits EngramaComponent

<MudCard>

	<MudCardHeader>
		<CardHeaderContent>
			<MudText Typo="Typo.h6">Registro de Funcionalidades</MudText>
		</CardHeaderContent>
	</MudCardHeader>
	<MudCardContent>

		<EditForm Model="@FuncionalidaSelected"
				  OnValidSubmit="OnSubmint">
			<DataAnnotationsValidator />

			<MudFocusTrap>

				<MudGrid>
					<MudItem sm="12">


						<MudTextField @bind-Value="@FuncionalidaSelected.nvchDescripcion"
									  Label="Descripción"
									  Lines="3"
									  MaxLength="1000"
									  Variant="Variant.Outlined" />


					</MudItem>
					<MudItem sm="12">
						<MudTextField @bind-Value="@FuncionalidaSelected.nvchEntidades"
									  Label="Entidades"
									  MaxLength="400"
									  Variant="Variant.Outlined" />


					</MudItem>
					<MudItem sm="12">
						<MudTextField @bind-Value="@FuncionalidaSelected.nvchInteracciones"
									  Label="Interacciones"
									  MaxLength="1000"
									  Variant="Variant.Outlined" />


					</MudItem>

					<MudItem sm="12">
						<MudTextField @bind-Value="@FuncionalidaSelected.nvchTecnico"
									  Label="Técnico"
									  MaxLength="2000"
									  Variant="Variant.Outlined" />


					</MudItem>

					<MudItem sm="12">
						<MudTextField @bind-Value="@FuncionalidaSelected.nvchConsideraciones"
									  Label="Consideraciones"
									  MaxLength="2000"
									  Variant="Variant.Outlined" />


					</MudItem>


					<MudItem sm="12">
						<MudButton Variant="Variant.Filled"
								   ButtonType="ButtonType.Submit"
								   Color="Color.Secondary">Guardar
							   </MudButton>
					</MudItem>
				</MudGrid>
			</MudFocusTrap> 
		</EditForm>
	</MudCardContent>


</MudCard>

