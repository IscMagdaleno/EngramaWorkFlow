@inherits EngramaComponent

<MudCard>

	<MudCardHeader>
		<CardHeaderContent>
			<MudText Typo="Typo.h6">Registro de Funcionalidades</MudText>
		</CardHeaderContent>
	</MudCardHeader>
	<MudCardContent>

		<EditForm Model="@ModuloSelected"
				  OnValidSubmit="OnSubmint">
			<DataAnnotationsValidator />

			<MudFocusTrap>

				<MudGrid>
					<MudItem sm="6">


						<MudTextField @bind-Value="@ModuloSelected.vchTitulo"
									  Label="Titulo"
									  MaxLength="100"
									  Variant="Variant.Outlined" />


					</MudItem>
					<MudItem sm="12">

						<MudTextField @bind-Value="@ModuloSelected.nvchProposito"
									  Label="Propósito"
									  Lines="5"
									  MaxLength="4000"
									  Variant="Variant.Outlined" />


					</MudItem>

					<MudItem sm="12">
						<MudButton Variant="Variant.Filled"
								   ButtonType="ButtonType.Submit"
								   Color="Color.Success">
							Guardar
						</MudButton>
					</MudItem>
				</MudGrid>
			</MudFocusTrap>
		</EditForm>
	</MudCardContent>


</MudCard>

