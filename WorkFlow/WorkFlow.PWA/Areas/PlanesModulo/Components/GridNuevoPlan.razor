@inherits EngramaComponent


<MudGrid>

	@if (MostrarProyecto.False())
	{

		@if (MostrarModulos.False())
		{
			<MudItem sm="12">
				<FormPlanes Data="Data" OnPlanTrabajoSaved="OnPlanTrabajoSaved"></FormPlanes>
			</MudItem>
		}
		@if (MostrarModulos)
		{
			<MudItem sm="12">
				<CardPlanes PlanTrabajo="Data.PlanTrabajoSelected"></CardPlanes>
			</MudItem>

			@if (Data.PlanTrabajoSelected.LstModulos.Any())
			{
				<MudItem sm="12">
					<MudGrid>
						@foreach (var item in Data.PlanTrabajoSelected.LstModulos)
						{
							<MudItem sm="4">
								<CardModulo ModuloSelected="@item"
											MostrarSeleccionar="true"
											OnModuloSelected="OnModuloSelected">
								</CardModulo>
							</MudItem>
						}
					</MudGrid>
				</MudItem>
			}

			@if (Data.ModuloSelected.vchTitulo.NotEmpty())
			{
				<MudItem sm="12">
					<CardDetalleModulo ModuloSelected="Data.ModuloSelected" OnInfoSaved="OnInfoSaved"></CardDetalleModulo>
				</MudItem>
			}

			<MudItem sm="12">
				<MudFab StartIcon="@Icons.Material.Filled.Save"
						Color="Color.Success"
						OnClick="OnClickSaveModulos"
						Label="Generar Proceso" />
			</MudItem>


		}
	}
	else
	{
		<MudItem sm="12">
			<GridProyecto Proyecto="@Data.ProyectoSelected">
			</GridProyecto>
		</MudItem>

	}


</MudGrid>

