@using WorkFlow.Share.Objetos.Planes

<MudCard Elevation="3" Class="ma-4">
	<MudCardHeader>

		<CardHeaderContent>
			<MudText Typo="Typo.h6">@PlanTrabajo?.vchNombre</MudText>
			<MudText Typo="Typo.body2" Color="Color.Secondary">@PlanTrabajo?.vchEstatus</MudText>
		</CardHeaderContent>

	</MudCardHeader>
	<MudCardContent>
		<MudText Typo="Typo.body1" Class="mb-2">
			<b>Descripción:</b> @PlanTrabajo?.nvchDescripcion
		</MudText>
		<MudText Typo="Typo.body2" Color="Color.Secondary">
			ID: @PlanTrabajo?.iIdPlanTrabajo
		</MudText>
	</MudCardContent>
	@if (MostrarSeleccionar)
	{
		<MudCardActions>
			<MudButton Variant="Variant.Filled"
					   Color="Color.Primary"
					   OnClick="@(()=>OnPlanTrabajoSelected.InvokeAsync(PlanTrabajo))">
				Ver Detalles
			</MudButton>
		</MudCardActions>
	}
</MudCard>

@code {
	[Parameter] public PlanTrabajo? PlanTrabajo { get; set; }
	[Parameter] public EventCallback<PlanTrabajo> OnPlanTrabajoSelected { get; set; }
	[Parameter] public bool MostrarSeleccionar { get; set; }
}