@using WorkFlow.Share.Objetos.Planes
@inherits MudBlazor.MudComponentBase

<MudCard Elevation="3" Class="ma-4">
	<MudCardHeader>
		<CardHeaderContent>
			<MudText Typo="Typo.body2" Color="Color.Secondary">@Funcionalidad?.nvchDescripcion</MudText>
		</CardHeaderContent>
		<CardHeaderActions>
			@if (MostrarFormFuncionalidad)
			{
				<MudIconButton Icon="@Icons.Material.Filled.ArrowBack" Color="Color.Error" OnClick="OnClickFormModulo" />
			}
			else
			{
				<MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Warning" OnClick="OnClickFormModulo" />
			}
		</CardHeaderActions>
	</MudCardHeader>
	<MudCardContent>

		@if (MostrarFormFuncionalidad)
		{
			<FormFuncionalidad FuncionalidaSelected="Funcionalidad"
							   OnFuncionalidadesSaved="OnFuncionalidadesSaved">
			</FormFuncionalidad>
		}
		else
		{
			<MudText Typo="Typo.body1" Class="mb-2">
				<b>Entidades:</b> @Funcionalidad?.nvchEntidades
			</MudText>
			<MudText Typo="Typo.body1" Class="mb-2">
				<b>Interacciones:</b> @Funcionalidad?.nvchInteracciones
			</MudText>
			<MudText Typo="Typo.body1" Class="mb-2">
				<b>Técnico:</b> @Funcionalidad?.nvchTecnico
			</MudText>
			<MudText Typo="Typo.body1" Class="mb-2">
				<b>Consideraciones:</b> @Funcionalidad?.nvchConsideraciones
			</MudText>
		}



		@if (MostrarSeleccionar)
		{
			<MudCardActions>
				<MudButton Variant="Variant.Filled"
						   Color="Color.Primary"
						   OnClick="@(()=>OnFuncionalidadSelected.InvokeAsync(Funcionalidad))">
					Ver Detalles
				</MudButton>
			</MudCardActions>
		}
	</MudCardContent>

</MudCard>

